/** @var $block \Magento\Swatches\Block\LayeredNavigation\RenderLayered */
?>
<?php $swatchData = $block->getSwatchData(); ?>
<div class="swatch-attribute swatch-layered <?php echo $swatchData['attribute_code'] ?>"
     attribute-code="<?php echo $swatchData['attribute_code'] ?>" attribute-id="174">
    <div class="swatch-attribute-options clearfix">
        <?php foreach ($swatchData['options'] as $option => $label): ?>
            <a href="<?php echo $label['link'] ?>" class="swatch-option-link-layered">
                <?php if (isset($swatchData['swatches'][$option]['type'])) { ?>
                    <?php switch ($swatchData['swatches'][$option]['type']) {
                        case '3':
                            ?>
                            <div class="swatch-option <?php echo $label['custom_style'] ?>"
                                 option-type="3"
                                 option-id="<?php echo $option ?>"
                                 option-label="<?php echo $label['label'] ?>"
                                 option-tooltip-thumb=""
                                 option-tooltip-value=""
                                ></div>
                            <?php    break;
                        case '2':
                            ?>
                            <?php $swatchThumbPath = $block->getSwatchPath('swatch_thumb',
                            $swatchData['swatches'][$option]['value']); ?>
                            <?php $swatchImagePath = $block->getSwatchPath('swatch_image',
                            $swatchData['swatches'][$option]['value']); ?>
                            <div class="swatch-option image <?php echo $label['custom_style'] ?>"
                                 option-type="2"
                                 option-id="<?php echo $option ?>"
                                 option-label="<?php echo $label['label'] ?>"
                                 option-tooltip-thumb="<?php echo $swatchThumbPath ?>"
                                 option-tooltip-value=""
                                 style="background: url(<?php echo $swatchImagePath ?>) no-repeat center; background-size: initial;"></div>
                            <?php    break;
                        case '1':
                            ?>
                            <div class="swatch-option color <?php echo $label['custom_style'] ?>"
                                 option-type="1"
                                 option-id="<?php echo $option ?>"
                                 option-label="<?php echo $label['label'] ?>"
                                 option-tooltip-thumb=""
                                 option-tooltip-value="<?php echo $swatchData['swatches'][$option]['value'] ?>"
                                 style="background: <?php echo $swatchData['swatches'][$option]['value'] ?> no-repeat center; background-size: initial;"></div>
                            <?php    break;
                        case '0':
                        default:
                            ?>
                                <div class="swatch-option text <?php echo $label['custom_style'] ?>"
                                     option-type="0"
                                     option-id="<?php echo $option ?>"
                                     option-label="<?php echo $label['label'] ?>"
                                     option-tooltip-thumb=""
                                     option-tooltip-value=""
                                    ><?php echo $swatchData['swatches'][$option]['value'] ?></div>
                            <?php    break;
                    } ?>
                <?php } ?>
            </a>
        <?php endforeach; ?>
    </div>
</div>

<script>
    require(["jquery", "jquery/ui", "swatchRenderer"], function ($) {
        $('.swatch-layered.<?php echo $swatchData['attribute_code'] ?>')
            .find('[option-type="1"], [option-type="2"], [option-type="0"], [option-type="3"]')
            .SwatchRendererTooltip();
    });
</script>
